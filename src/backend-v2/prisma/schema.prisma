generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ======================
// Модел за потребители
// ======================

model User {
  id                        Int       @id @default(autoincrement())
  username                  String    @unique
  email                     String    @unique
  password                  String
  fName                     String?
  lName                     String?
  userImage                 String?
  confirmationCode          String?
  confirmationCodeExpiresAt DateTime?
  lastConfirmationResend    DateTime?
  isActive                  Boolean   @default(false)
  isAdmin                   Boolean   @default(false)
  createdAt                 DateTime  @default(now())
  accountStatus             String    @default("active")

  conversationsAsUser1 Conversation[] @relation("ConversationUser1")
  conversationsAsUser2 Conversation[] @relation("ConversationUser2")

  routes        Route[]          @relation("UserRoutes")
  friends       Json?
  averageRating Float @default(0)

  reportsSent     Report[] @relation("Reporter")
  reportsReceived Report[] @relation("ReportedUser")
  requests        Request[] @relation("UserRequests")

  givenComments    Comment[] @relation("GivenComments")
  receivedComments Comment[] @relation("ReceivedComments")

  sentMessages Message[] @relation("SenderMessages") // ← добавено
}

// ======================
// Модел за коментарите
// ======================

model Comment {
  id          Int      @id @default(autoincrement())
  text        String
  rating      Int
  authorId    Int
  recipientId Int
  routeId     Int?
  createdAt   DateTime @default(now())

  author    User  @relation("GivenComments", fields: [authorId], references: [id])
  recipient User  @relation("ReceivedComments", fields: [recipientId], references: [id])

  route     Route? @relation(fields: [routeId], references: [id])

  @@index([recipientId])
}

// ======================
// Модел за маршрути
// ======================

model Route {
  id                 Int      @id @default(autoincrement())
  ownerId            Int
  selectedVehicle    String
  registrationNumber String?
  departureCity      String
  departureStreet    String?
  departureNumber    String?
  arrivalCity        String
  arrivalStreet      String?
  arrivalNumber      String?
  selectedDateTime   DateTime
  routeTitle         String?
  status             String   @default("active")
  createdAt          DateTime @default(now())
  comments           Comment[]

  owner    User @relation("UserRoutes", fields: [ownerId], references: [id])
  requests Request[] @relation("RouteRequests")
}

// ======================
// Модел за репорти
// ======================

model Report {
  id          Int      @id @default(autoincrement())
  text        String
  image       String?
  status      ReportStatus @default(PENDING)

  reporterId  Int
  reportedId  Int

  reporter    User @relation("Reporter", fields: [reporterId], references: [id])
  reported    User @relation("ReportedUser", fields: [reportedId], references: [id])

  createdAt   DateTime @default(now())
}

enum ReportStatus {
  PENDING
  RESOLVED
  REJECTED
}

// ======================
// Модел за рикуести
// ======================

model Request {
  id             Int      @id @default(autoincrement())
  route          Route    @relation("RouteRequests", fields: [routeId], references: [id])
  routeId        Int
  user           User     @relation("UserRequests", fields: [userID], references: [id])
  userID         Int
  toUserId       Int 
  username       String
  userFname      String
  userLname      String
  userEmail      String
  userRouteId    Int
  departureCity  String
  arrivalCity    String
  dataTime       DateTime
  requestComment String
  status         String   @default("pending")
  rateCreator    Boolean  @default(false)
  rateUser       Boolean  @default(false)
  createdAt      DateTime @default(now())
  decidedAt      DateTime? // ← тук добавяме новото поле
}

// ======================
// Модел за нотификации
// ======================

model Notification {
  id              Int      @id @default(autoincrement())
  recipient       String   // username на собственика на маршрута
  routeId         Int
  message         String
  requester       Json
  personalMessage String?  
  senderId        Int    
  conversationId  String?
  createdAt       DateTime @default(now())
  read            Boolean  @default(false)
  status          String   @default("active")
  approver        Json?
}

// ======================
// Модел за разговор
// ======================

model Conversation {
  id        Int       @id @default(autoincrement())
  routeId   Int
  user1Id   Int
  user2Id   Int
  createdAt DateTime  @default(now())

  messages  Message[]

  user1     User @relation("ConversationUser1", fields: [user1Id], references: [id])
  user2     User @relation("ConversationUser2", fields: [user2Id], references: [id])

  @@unique([routeId, user1Id, user2Id])
}

// ======================
// Модел за съобщения
// ======================

model Message {
  id             Int      @id @default(autoincrement())
  conversationId Int
  senderId       Int
  text           String
  createdAt      DateTime @default(now())
  read           Boolean  @default(false)

  conversation   Conversation @relation(fields: [conversationId], references: [id])
  sender         User @relation("SenderMessages", fields: [senderId], references: [id]) // ← добавен name

  @@index([conversationId])
  @@index([senderId])
}